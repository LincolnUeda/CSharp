@model ContatoModel
@{
    ViewData["Title"] = "Excluir";
}
<div class="text-center">
    <h3>Deseja excluir o contato @Model.Nome?</h3>
</div>
<div class="gap-2 text-center"> 
    <a role="button" class="btn btn-danger" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id">Sim</a>
    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Não</a>
</div>