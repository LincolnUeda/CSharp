@model ContatoModel
@{
    ViewData["title"] = "Adicionar";
    var action = "Adicionar";
    var caption = "Salvar Contato";
    var titulo = "Adicionar Novo Contato";
}

 
@if (Model != null)
{
    if (Model.Id != 0)
    {
        ViewData["title"] = "Editar";
        action = "Editar";
        caption = "Alterar Contato";
        titulo = "Editar Contato";
    }
}

<div class="text-center gap-2">
    <h1>@titulo</h1>
    
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <form asp-controller="Contato" asp-action="@action" method="post" >
        <div class ="form-group gap-2">
            <div class="form-group">
                <label for="Nome">Nome</label>
                <input type="text" asp-for="Nome"  class="form-control" />
                @Html.ValidationMessageFor(x=>x.Nome)
            </div>
            <div class="form-group">
                <label for="Email">E-Mail</label>
                <input type="text" asp-for="Email" class="form-control" />
                @Html.ValidationMessageFor(x => x.Email)
            </div>

            <div class="form-group">
                <label for="Celular">Celular</label>
                <input type="text" asp-for="Celular" class="form-control" />
                @Html.ValidationMessageFor(x => x.Celular)
            </div>
            <div class="d-grid gap-2 mt-3">
                <button type="submit" class="btn btn-primary w-100">@caption</button>
                <a role="button" class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>
    </div>
</div>